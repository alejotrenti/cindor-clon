<!-- Importar Flowbite -->
<script src="https://unpkg.com/flowbite@1.6.5/dist/flowbite.js"></script>

<div id="default-carousel" class="relative mx-auto max-w-5xl bg-red-700" data-carousel="slide">
    <!-- Carousel wrapper -->
    <div class="relative overflow-hidden rounded-lg shadow-lg md:h-[500px] lg:h-[900px] ">
        <!-- Item 1 -->
        <div class="duration-700 ease-in-out opacity-0 transition-opacity delay-100 mx-auto" data-carousel-item>
            <img src="/producto1.webp" class="w-72 object-contain h-auto transition-all duration-500 ease-in-out transform hover:scale-105 bg-red-700" alt="Imagen de producto 1">
        </div>
        <!-- Item 2 -->
        <div class="duration-700 ease-in-out opacity-0 transition-opacity delay-100" data-carousel-item>
            <img src="/producto2.webp" class="w-72 object-contain h-auto transition-all duration-500 ease-in-out transform hover:scale-105 bg-red-700" alt="Imagen de producto 2">
        </div>
    </div>

    <!-- Slider indicators -->
    <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
        <button type="button" class="w-3 h-3 bg-white rounded-full transition-all duration-300 hover:bg-gray-700 focus:outline-none" aria-current="true" aria-label="Slide 1" data-carousel-slide-to="0"></button>
        <button type="button" class="w-3 h-3 bg-white rounded-full transition-all duration-300 hover:bg-gray-700 focus:outline-none" aria-current="false" aria-label="Slide 2" data-carousel-slide-to="1"></button>
    </div>

    <!-- Slider controls -->
    <button type="button" class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
            </svg>
            <span class="sr-only">Previous</span>
        </span>
    </button>
    <button type="button" class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <span class="sr-only">Next</span>
        </span>
    </button>
</div>

<script>
    // Script para manejar el fade en las imágenes
    const items = document.querySelectorAll('[data-carousel-item]');
    let activeIndex = 0;

    function setActiveItem() {
        // Hacer desaparecer la imagen actual
        items[activeIndex].classList.add('opacity-0');
        items[activeIndex].classList.remove('opacity-100');

        // Calcular el siguiente índice
        activeIndex = (activeIndex + 1) % items.length;

        // Hacer aparecer la siguiente imagen
        items[activeIndex].classList.add('opacity-100');
        items[activeIndex].classList.remove('opacity-0');
    }

    // Inicializar la primera imagen visible
    items[activeIndex].classList.add('opacity-100');

    // Cambiar la imagen cada 3 segundos
    setInterval(setActiveItem, 6000);
</script>
